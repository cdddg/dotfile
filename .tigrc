color cursor default color8 bold

set diff-highlight = true
set vertical-split = no
set main-view-author-display = email-user
set main-view-commit-title-graph = v2
set main-view-date-local = yes
set main-view-id-display = yes
set line-graphics = default
set main-view = date:custom,format="%Y-%m-%d %H:%M:%S",local=true id:width=8 author:email-user commit-title:yes,graph,refs

bind main J >git checkout %(commit)
